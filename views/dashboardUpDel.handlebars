{{!-- should be form input to delete posts --}}

{{#with postGetter as |post|}}

<form>
<div class="card p-2 m-2 bg-secondary d-flex">
    <div class="card-header bg-secondary float-left ">
        <div = "form-group" class="card-title text-dark">
          <label for="updatedTitle"><h4> post title: </h4></label>
          <textarea id="updatedTitle" class = "card-title text-dark form-control border rounded" rows = "1">{{title}}</textarea>
        </div>
      <div class="d-flex justify-content-between">
        <h6 class="card-subtitle mb-2 text-light float-left d-inline-flex">
          </h6>
        <h6 class="card-subtitle mb-2 text-dark float-right d-inline-flex">
          Uploaded on:
          {{format_date date_created}}</h6>
      </div>
    </div>
    <div class="form-group rounded">
    <label for="updatedContent"><h4> post content: </h4></label>
    <textarea id="updatedContent" class ="form-control border rounded bg-light" >{{content}}</textarea>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary my-1 bg-danger" id="postDelete" data-id={{id}}>delete</button>
        <button type="submit" class="btn btn-primary my-1" id="postUpdate" data-id={{id}}>update</button>
    </div>
  </div>
</form>


{{/with}}
